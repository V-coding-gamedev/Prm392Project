<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pagebkg"
    tools:context=".Cart.CardActivity">



    <include
        android:id="@+id/include"
        layout="@layout/menu_top" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/background_cart"
        android:padding="20dp"
        android:maxHeight="700dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/include"
        android:layout_margin="5dp"
        app:layout_constraintBottom_toTopOf="@id/thanhtoan"
        app:layout_constraintVertical_bias="0.1" />

    <LinearLayout
        android:id="@+id/thanhtoan"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="#0A175E"
        android:gravity="right|center_vertical"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/recyclerView"

        app:layout_constraintVertical_bias="1">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:textColor="@color/white"
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="5dp"
                android:layout_weight="0.7"
                android:paddingTop="5dp"
                android:text="Tổng:"
                android:textAlignment="center"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/tonggiatien"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="5dp"

                android:layout_weight="1"
                android:text="100.000 vnđ"
                android:textAlignment="center"
                android:textColor="#1BC12C"
                android:textSize="24sp"
                android:textStyle="bold" />
        </LinearLayout>


        <Button
            android:id="@+id/thanhtoan_button"
            android:layout_width="150dp"
            android:layout_height="90dp"
            android:layout_marginRight="10dp"
            android:text="Thanh toán"
            android:textSize="18sp" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>