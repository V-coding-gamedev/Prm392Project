<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:background="@drawable/item_cart"
    android:layout_marginBottom="10dp"
    android:gravity="center_vertical">

    <ImageView
        android:id="@+id/imageCartItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginLeft="10dp"
        tools:srcCompat="@tools:sample/avatars" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/descriptionItem"
            android:layout_width="130dp"
            android:layout_height="66dp"
            android:layout_margin="5dp"
            android:layout_weight="3"
            android:padding="2dp"
            android:text="Nước mắm Phú Quốc chất lượng caoNước mắm Phú Quốc chấchất lượng cao"


            android:textColor="@color/black"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/giaProduct"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:padding="4sp"
            android:text="TextView" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:layout_marginRight="8dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingVertical="20dp">

        <Button
            android:id="@+id/buttonUp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/up_button" />

        <TextView
            android:id="@+id/numbItem"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_weight="0.5"
            android:padding="5dp"
            android:text="10"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <Button
            android:id="@+id/buttonDown"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/down_button" />
    </LinearLayout>

    <Button
        android:id="@+id/deleteButton"
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:layout_marginVertical="30sp"
        android:layout_marginRight="10dp"
        android:layout_weight="1"
        android:background="@drawable/delete_button"
        android:layoutDirection="inherit"
        android:rotation="90"
        android:text="DELETE" />
</LinearLayout>